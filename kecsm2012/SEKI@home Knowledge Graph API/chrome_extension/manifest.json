{
  "name": "SEKI@home",
  "version": "0.8",
  "manifest_version": 2,
  "description": "SEKI@home, or Crowdsourcing an Open Knowledge Graph API",
  "icons": {
    "16": "images/logo_16.png",
    "19": "images/logo_19.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "default_locale": "en_US",
  "browser_action": {
    "default_icon": "images/logo_19.png",
    "default_title": "Show stats",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "http://www.google.com/*"],
      "js": [
        "js/jquery.js",
        "js/URI.min.js",
        "js/contentscript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "offline_enabled": false,
  "permissions": [
    "http://openknowledgegraph.org/*",
    "http://seki.code4fun.de/*",
    "http://localhost/*",
    "https://www.google.com/*",
    "http://www.google.com/*"
  ]
}